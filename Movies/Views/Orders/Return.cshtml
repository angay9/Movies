<div class="row mtop-10">
    <div class="col-md-12">
        <form method="POST" action="@Url.Action("ReturnMovie", "Orders")">
            <input type="hidden" name="movieId" value="@Model.Id" />
            <button class="btn btn-primary">Return</button>
        </form>
    </div>
</div>

<div class="row mtop-30 feedback-container">
    <div class="col-md-12">
        <h4>Please tell us what you're thinking about this movie.</h4>
        <form method="POST" class="comment-form">
            <input type="hidden" name="movieId" value="@Model.Id" />
            <textarea name="comment" class="form-control" cols="4" rows="8" maxlength="500"></textarea>
            <input type="number" max="10" min="0" name="rating" class="mtop-10 form-control" step="any"/>
            
            <button class="btn btn-primary mtop-10">Comment</button>
        </form>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/Modules/orders.js")
}